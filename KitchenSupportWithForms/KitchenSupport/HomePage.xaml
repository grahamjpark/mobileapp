<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="KitchenSupport.HomePage">
  <ContentPage.Content>
    <StackLayout Spacing="20" Padding="50"
   		   	VerticalOptions="Center">
      <Button Text = "Back"
    HorizontalOptions="LayoutOptions.Start"
    Clicked="navigateBack"/>
      <Label Text="My Home Page"
        FontSize="36"
        HorizontalOptions="Center"/>
      <Button Text="Find Recipes" TextColor="White"
          BackgroundColor="#77D065"
          Clicked="findRecipes"/>
      <Button Text="View Saved Recipes" TextColor="White"
          BackgroundColor="#77D065"
          Clicked="viewSavedRecipes"/>
      <Button Text="My Ingredients" TextColor="White"
          BackgroundColor="#77D065"
          Clicked="navigateToIngredientsView"/>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>